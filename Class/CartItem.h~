#ifndef CARTITEM_H
#define CARTITEM_H

#include "Product.h"

class CartItem {
private:
    Product product;
    int quantity;
public:
    CartItem(Product product, int quantity) {
        this->product = product;
        this->quantity = quantity;
    }

    void setProduct(Product product) {
        this->product = product;
    }

    void setQuantity(int quantity) {
        this->quantity = quantity;
    }

    Product getProduct() {
        return product;
    }

    int getQuantity() {
        return quantity;
    }
};

#endif // CARTITEM_H
